{
  "name": "yilong-portfolio-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8765",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "test": "yarn test:unit",
    "test:pre-commit": "yarn test:unit:ci && yarn test:component && yarn test:e2e:chrome",
    "test:ci": "yarn test:unit:ci && yarn test:component && CYPRESS_BASE_URL=http://localhost:3000 yarn test:e2e:chrome",
    "test:e2e": "cypress open",
    "test:e2e:chrome": "cypress run --browser chrome",
    "test:e2e:headless": "cypress run",
    "test:component": "cypress run --component",
    "test:unit": "vitest",
    "test:unit:ci": "vitest --run",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:check": "prettier --check --ignore-unknown .",
    "lint": "next lint && tsc",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^14.2.16",
    "@react-spring/three": "9.7.5",
    "@react-spring/web": "9.7.5",
    "@react-three/drei": "^9.114.6",
    "@react-three/fiber": "^8.17.10",
    "@types/three": "^0.169.0",
    "next": "14.2.16",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.169.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^2.0.2",
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/addon-interactions": "^8.3.6",
    "@storybook/addon-links": "^8.3.6",
    "@storybook/addon-onboarding": "^8.3.6",
    "@storybook/blocks": "^8.3.6",
    "@storybook/nextjs": "^8.3.6",
    "@storybook/react": "^8.3.6",
    "@storybook/test": "^8.3.6",
    "@types/node": "^22.7.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "cypress": "^13.15.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.16",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-storybook": "^0.10.1",
    "husky": "^9.1.6",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "storybook": "^8.3.6",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=20.15.0"
  }
}
